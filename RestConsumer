    public static void RestPost()
    {
        partnerSoapSforceCom.Soap p = new partnerSoapSforceCom.Soap();
	String uname = 'user name';
    	String pwd = 'password'+'token';
        partnerSoapSforceCom.LoginResult e = p.login(uname,pwd);
        System.debug('The result of the login call is => '+e);
        System.debug('ServerURL = '+e.serverURL);//Line 1
        System.debug('Session Id = '+e.SessionId);//Line 2
        accountdetailsdto objdto = new accountdetailsdto();
        objdto.name = 'Manoj Kumar';
        objdto.phone = '707-555-1234';
        objdto.website = 'www.wingo.ca.us';
        Http http = new Http();
		HttpRequest request = new HttpRequest();
        request.setEndpoint('https://salesforce domain/services/apexrest/NirmalHelloWorldRestService');
        request.setHeader('Authorization','Bearer '+e.sessionId); 
        request.setMethod('POST');
        request.setHeader('Content-Type', 'application/json;charset=UTF-8');
        // Set the body as a JSON object
        //request.setBody('{"name" : "Wingo Ducks","phone" : "707-555-1234","website" : "www.wingo.ca.us"}');
        request.setBody(JSON.serialize(objdto));
        HttpResponse response = http.send(request);
        // Parse the JSON response
        if (response.getStatusCode() == 200) {
            System.debug(response.getStatusCode() + ' ' + response.getStatus());
            System.debug('Account Id - ' + response.getBody());
        } else {
            System.debug(response.getBody());
        }
    }
}

